{
  "swagger": "2.0",
  "info": {
    "description": "RippleOSI Middle Tier REST APIs",
    "version":     "1.0.0",
    "title":       "RippleOSI"
  },
  "schemes": ["http"],
  "tags": [{
    "name": "Ripple"
  }],
  "securityDefinitions": {
    "QEWDToken": {
      "description": "For accessing the API a valid token must be passed in all the queries in the 'Cookies' header.  A valid token is generated by the /api/initialise API.  The following syntax must be used in the 'Cookie' header :    JSESSIONID=xxxxxxx",
      "type":        "apiKey",
      "name":        "Authorization",
      "in":          "header"
    }
  },
  "paths": {
    "/api/initialise":                                       "=> get('initialise.json')",
    "/api/application" : {
      "get" :                                                "=> get('application-get.json')",
      "post":                                                "=> get('application-post.json', 'desc', 'Saves users application settings')",
      "put":                                                 "=> get('application-post.json', 'desc', 'Updates users application settings')"
    },
    "/api/user":                                             "=> get('user.json')",
    "/api/patients":                                         "=> get('patients.json')",
    "/api/patients/{patientId}/counts":                      "=> get('patientCounts.json')",
    "/api/documents/patient/{patientId}":                    "=> get('documents.json')",
    "/api/documents/patient/{patientId}/{documentId}":       "=> get('patientDocuments.json')",
    "/api/patients/{patientId}/clinicalStatements":          "=> get('patientClinicalStatements.json')",
    "/api/patients/{patientId}/events":                      "=> get('patientEvents.json')",
    "/api/patients/{patientId}/events/{type}":               "=> get('patientEventsOfType.json')",
    "/api/patients/{patientId}/dicom/studies":               "=> get('dicomStudies.json')"  
},
  "definitions": {
    "initialiseResponse":                     "=> get('initialiseResponse.json')",
    "applicationPayload":                     "=> get('applicationPayload.json')",
    "applicationSaveResponse":                "=> get('applicationSaveResponse.json')",
    "userResponse":                           "=> get('userResponse.json')",
    "userError":                              "=> get('userError.json')",
    "patientsResponse":                       "=> get('patientsResponse.json')",
    "patientDocumentResponse":                "=> get('patientDocumentResponse.json')",
    "dicomStudiesResponse":                   "=> get('dicomStudiesResponse.json')",
    "patientClinicalStatementsResponse":      "=> get('patientClinicalStatementsResponse.json')",
    "patientEventsResponse":                  "=> get('patientEventsResponse.json')",
    "countsResponse":                         "=> get('countsResponse.json')",
    "documentsResponse":                      "=> get('documentsResponse.json')",
    "headingPostResponse":                    "=> get('headingPostResponse.json')"
  }
}
